{
  "name": "federated-worker",
  "version": "1.2.2",
  "author": "Chanceler Shaffer",
  "description": "Class to abstract instantiation of web worker that can load federated modules or any remote script",
  "repository": {
    "type": "git",
    "url": "https://github.com/shafferchance/federated-worker"
  },
  "license": "MIT",
  "devDependencies": {
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.3",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0",
    "worker-loader": "^3.0.8"
  },
  "browser": "./dist/umd/federated-worker.js",
  "main": "./dist/umd/federated-worker.js",
  "types": "./dist/umd/index.d.ts",
  "scripts": {
    "dev": "webpack-dev-server --config webpack.dev.js",
    "build": "yarn build:prod",
    "build:dev": "rm -rf dist federated && webpack --config webpack.dev.js",
    "build:prod": "rm -rf dist federated && webpack --config webpack.prod.js",
    "build:prod:watch": "rm -rf dist && webpack --mode production --watch --config webpack.prod.js",
    "pack": "yarn build:prod; npm pack",
    "publish": "yarn build:prod",
    "federated-serve": "serve --cors=true dist -p 9001"
  },
  "dependencies": {
    "inline-worker-loader": "^0.0.1"
  }
}
